@namespace Client.App.Shared.Components

<MudSpacer />

<MudHidden Breakpoint="Breakpoint.SmAndDown">
    <MudChip Class="ml-1" Color="Color.Secondary" Variant="Variant.Text">
        1 <MudAvatar Style="height:20px; width:20px" Class="mx-2 align-self-center" Image="@AppIcons.TFuelLogo"></MudAvatar> ≈ @TFuelPrice.ToString("N4") USD
    </MudChip>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.Xs">
    <MudChip Class="ml-1 cursor-pointer" Color="Color.Primary" Variant="Variant.Text">@ShortenWalletAddress</MudChip>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.Xs">
    <MudChip Class="ml-1" Color="Color.Primary" Variant="Variant.Text">
        @WalletBalance
        <MudAvatar Style="height:20px; width:20px" Class="ml-2 align-self-center" Image="@AppIcons.TFuelLogo"></MudAvatar>
    </MudChip>
</MudHidden>

<MudMenu Class="ml-3" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" Variant="Variant.Filled" Color="Color.Secondary">
    <ActivatorContent>
        <MudChip Color="Color.Secondary" Icon="@Icons.Material.Filled.Person">
            <MudHidden Breakpoint="Breakpoint.Xs">
                @Name
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.SmAndUp">
                Account Information
            </MudHidden>
        </MudChip>
    </ActivatorContent>
    <ChildContent>
        <MudHidden Breakpoint="Breakpoint.SmAndUp">
            <MudMenuItem>@Name</MudMenuItem>
            <MudMenuItem>Address: @ShortenWalletAddress</MudMenuItem>
            <MudMenuItem>
                <MudText Class="d-flex align-self-center">
                    Balance: @WalletBalance
                    <MudAvatar Style="height:20px; width:20px" Color="Color.Transparent" Class="ml-1 align-self-center" Image="@AppIcons.TFuelLogo"></MudAvatar>
                </MudText>
            </MudMenuItem>
        </MudHidden>
        <MudMenuItem OnClick="@(() => Logout())">Signout</MudMenuItem>
    </ChildContent>
</MudMenu>